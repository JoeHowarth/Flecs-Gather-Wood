{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "CMake: Build",
      "command": "cmake",
      "args": ["--build", "build"],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "detail": "CMake template build task"
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "clear; cmake --build build; ${workspaceFolder}/build/FlecsGatherWood",
      "presentation": {
        "echo": true,
        "reveal": "always",
        // "focus": true,
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ]
}
